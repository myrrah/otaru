    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        int codigo = Integer.parseInt(txtFacture.getText());
        listar(codigo);
    }                                        
    public void listar(int codigo) {
        //por medio de un BO creamos una lsita con todos los datos de productos
        //envia el modelo a la tabla
         ArrayList<DetalleFactura> lista = new ArrayList<>();
        //llamamos el metodo que trae los productos y transforma los id de categoria y proveedor en sus nombres
        lista = conF.listarDetalle(codigo);
        DefaultTableModel modelo = (DefaultTableModel) jtProductos.getModel();
        modelo.setRowCount(0);
        System.out.println(lista.size());
        for (int i = 0; i < lista.size(); i++) {
            modelo.addRow(new Object[]{conF.buscarProductos(lista.get(i).getProducto()).getNombre(),
                lista.get(i).getFactura(),lista.get(i).getValorUnitario(), lista.get(i).getCantidad()});
        }
    }

